{
    "manifest_version": 2,
    "name": "Meets Cinema Mode",
    "version": "1.0",
    "description": "Cinema mode for Google Meets, removes extra UI elements and makes the video full screen.",
    "icons": {
        "48": "img/icon48.png"
    },
    "permissions": [
        "activeTab"
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}